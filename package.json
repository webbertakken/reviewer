{
  "name": "reviewer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "yarn build && concurrently \"yarn build --watch\" \"nodemon -w dist -x node dist/index.mjs\"",
    "build": "tsc -p tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint src test --ext js,ts,mts --max-warnings 0 ",
    "fix": "eslint src test --ext js,ts,mts --max-warnings 0 --fix",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx|mts)": "bash -c 'tsc --skipLibCheck --noEmit'",
    "*.@(ts|tsx|mts|js|jsx|mjs|cjs)": "eslint --max-warnings 0",
    "*.@(ts|tsx|mts|js|jsx|mjs|cjs|json|jsonc|json5|md|mdx|yaml|yml)": "prettier --write"
  },
  "nodemonConfig": {
    "delay": 100
  },
  "dependencies": {
    "@octokit/auth-app": "^5.0.6",
    "@octokit/rest": "^19.0.13",
    "@octokit/types": "^10.0.0",
    "@types/node": "^20.4.0",
    "chatgpt": "^5.2.5",
    "dotenv": "^16.3.1",
    "esm": "^3.2.25",
    "octokit": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-c8": "^0.32.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "=8.0.3",
    "jest": "^29.6.0",
    "lint-staged": "=13.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.1.5",
    "vitest": "^0.32.4"
  },
  "packageManager": "yarn@3.6.0",
  "volta": {
    "node": "18.16.1",
    "yarn": "3.6.0"
  }
}
